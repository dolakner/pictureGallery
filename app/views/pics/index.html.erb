<p id="notice"><%= notice %></p>

<h1>Listing Pics</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pics.each do |pic| %>
      <tr>
        <td><%= image_tag pic.image.url(:medium) %></td>
        <td><%= pic.description %></td>
        <td><%= link_to 'Show', pic, class: "btn btn-secondary" %></td>
        <% if pic.user == current_user %>
          <td><%= link_to 'Edit', edit_pic_path(pic), class: "btn btn-secondary" %></td>
          <td><%= link_to 'Destroy', pic, method: :delete, data: { confirm: 'Are you sure?' }, class:  "btn btn-secondary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

